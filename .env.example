# Orkes Configuration
ORKES_SERVER_URL=https://developer.orkescloud.com/api
ORKES_API_KEY=your_api_key_id_here
ORKES_SECRET_KEY=your_api_secret_here
ORKES_TOKEN=your_jwt_token_here  # Optional: If you have a JWT token

# Demo Configuration
DEMO_MODE=false  # Set to true for demo mode without Orkes connection

# Webhook Configuration (for MongoDB integration)
ORKES_WEBHOOK_URL=  # Get this from Orkes webhook setup
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_SERVICE_PORT=3100

# MongoDB Configuration (for webhook service)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=coo_assistant
MONGODB_REVIEWS_COLLECTION=reviews
MONGODB_METRICS_COLLECTION=metrics
MONGODB_SALES_COLLECTION=sales
MONGODB_CUSTOMERS_COLLECTION=customers